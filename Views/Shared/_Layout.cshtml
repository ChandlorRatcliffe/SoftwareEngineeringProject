<!-- Purpose: A Global Layout for the Website, initialized by _ViewStart -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/css/fontawesome.css">
        <link rel="stylesheet" href="~/lib/css/bootstrap.css" />
        <link href='~/lib/packages/core/main.css' rel='stylesheet' />
        <link href='~/lib/packages/daygrid/main.css' rel='stylesheet' />
        <link href='~/lib/packages/timegrid/main.css' rel='stylesheet' />
        <link href='~/lib/packages/list/main.css' rel='stylesheet' />
        <script src="~/lib/js/jquery-3.4.1.js"></script>
        <script src="~/lib/js/all.js"></script>
        <script src="~/lib/js/bootstrap.bundle.js"></script>
        <script src='~/lib/packages/core/main.js'></script>
        <script src='~/lib/packages/interaction/main.js'></script>
        <script src='~/lib/packages/daygrid/main.js'></script>
        <script src='~/lib/packages/timegrid/main.js'></script>
        <script src='~/lib/packages/list/main.js'></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/css/fontawesome.min.css">
        <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
        <link href='~/lib/packages/core/main.min.css' rel='stylesheet' />
        <link href='~/lib/packages/daygrid/main.min.css' rel='stylesheet' />
        <link href='~/lib/packages/timegrid/main.min.css' rel='stylesheet' />
        <link href='~/lib/packages/list/main.min.css' rel='stylesheet' />
        <script src="~/lib/js/jquery-3.4.1.min.js"></script>
        <script src="~/lib/js/all.min.js"></script>
        <script src="~/lib/js/bootstrap.bundle.min.js"></script>
        <script src='~/lib/packages/core/main.min.js'></script>
        <script src='~/lib/packages/interaction/main.min.js'></script>
        <script src='~/lib/packages/daygrid/main.min.js'></script>
        <script src='~/lib/packages/timegrid/main.min.js'></script>
        <script src='~/lib/packages/list/main.min.js'></script>
    </environment>
    <style>
        html,body {
            height: 100%;
        }
    </style>

</head>

<body>
    <nav class="shadow navbar navbar-expand-md bg-dark navbar-light sticky-top px-0">

        <button class="btn btn-dark btn-lg p-0 ml-2" type="button" href="#" style="min-width: 72px;" onclick="location.href='@Url.Action("Index", "Home")'">
            <div class="form-inline">
                <span class="">
                    <i class="fas fa-cog fa-spin fa-2x fa-fw"></i>
                </span>
                <span class="align-self-center text-primary" style="font-size: 1.5rem;">Karbon</span>
            </div>
        </button>

        <span>
            <button class="btn btn-dark mx-1 d-sm-inline-block d-md-none d-lg-none" type="button" onclick="location.href='@Url.Action("Index", "Accounts")'">
                Logout <i class="far fa-user-circle fa-2x" style="vertical-align:middle"></i>
            </button>
            <button class="btn btn-dark mx-1 d-sm-inline-block d-md-none d-lg-none navbar-toggler mr-3" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </span>

        <div class="collapse navbar-collapse d-lg-none" id="collapsibleNavbar">
            <a class="btn btn-dark nav-link @Html.Raw(Url.Action().Equals("/Projects") ? "active" : "") d-lg-none ml-1" href="@Url.Action("Index","Projects")">Dashboard</a>
            <a class="btn btn-dark nav-link d-lg-none" href="#">Project</a>
            <a class="btn btn-dark nav-link d-lg-none" href="#">Task</a>
            <a class="btn btn-dark nav-link d-lg-none" href="#">Notes</a>
            <a class="btn btn-dark nav-link d-lg-none" href="#">Permissions</a>
            <a class="btn btn-dark nav-link d-lg-none" href="#">Settings</a>
        </div>

        <div class="col-3 d-none d-lg-block px-0">
            <form asp-action="Index" asp-controller="Search" method="post" defaultbutton="SubmitButton" runat="server">
                <input asp-form="query" class="form-control" type="text" placeholder="Search" name="Query">
                <!--
                        <span asp-validation-for="query"></span>    
                -->
                <button id="SubmitButton" type="submit" style="display:none;">Test</button>
            </form>
        </div>

        <!-- what does this button do that the button within the span above doesn't? Answer: It displays on medium and large but, not small -->
        <button class="btn btn-dark mx-1 d-none d-md-block d-lg-block mr-2" type="button" onclick="location.href='@Url.Action("Index", "Accounts")'">
            <i class="far fa-user-circle fa-2x" style="vertical-align:middle"></i>
        </button>

    </nav>

    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
            <!--Display for XL to Large-->
            <div class="col-lg-2 order-first d-none d-lg-block d-xl-block bg-dark">
                <ul class="nav nav-pills flex-column mt-3">
                    <li class="nav-item mb-1">
                        <a class="btn btn-dark nav-link @Html.Raw(Url.Action().Equals("/Projects") ? "active" : "") text-left" href="@Url.Action("Index","Projects")">Dashboard</a>
                    </li>
                    <li class="nav-item my-1" id="proj">
                        <a class="btn btn-dark nav-link text-left" href="#">Project</a>
                    </li>
                    <li class="nav-item my-1" id="task">
                        <a class="btn btn-dark nav-link text-left" href="#">Task</a>
                    </li>
                    <li class="nav-item my-1" id="notes">
                        <a class="btn btn-dark nav-link text-left" href="#">Notes</a>
                    </li>
                    <li class="nav-item my-1" id="perm">
                        <a class="btn btn-dark nav-link text-left" href="#">Permissions</a>
                    </li>
                    <li class="nav-item my-1" id="sett">
                        <a class="btn btn-dark nav-link text-left" href="#">Settings</a>
                    </li>
                </ul>
            </div>
            <div class="col order-last bg-darkcontainer-fluid mt-3">
                @RenderBody()
            </div>
        </div>
    </div>


</body>
</html>

<script>
    var kebabSwitch = false;
    $("#kebab").click(function () {
        if (kebabSwitch) {
            $("#sidebar").css("display", "none");
            kebabSwitch = false;
        }
        else {
            $("#sidebar").css("display", "block");
            kebabSwitch = true;
        }
    });
</script>