@model IEnumerable<Account>

@{
    ViewBag.Title = "Account Table";
}

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6 text-center p-5 bg-dark rounded border border-primary">
                <form class="text-center">
                    <div class="form-group text-center mt-2">
                        <label class="text-center text-light" for="exampleInputEmail1">Email&nbsp;or&nbsp;Username</label>
                        <input class="form-control text-center text-light bg-dark" type="text" id="idInput" aria-describedby="idHelp" placeholder="Enter Email or Username">
                        <small class="form-text text-muted text-center text-light" id="idHelp">Secured</small>
                    </div>
                    <div class="form-group mt-2">
                        <label class="text-center text-light" for="exampleInputPassword1">Password</label>
                        <input class="form-control text-center text-light bg-dark" type="password"  id="passwordInput" placeholder="Password" >
                    </div>
                    <div class="form-check">
                        <input class="form-check-input text-center text-light" type="checkbox" id="exampleCheck1">
                        <label class="form-check-label text-center font-co text-light" for="exampleCheck1">Remember&nbsp;Me?</label>
                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary text-light text-center mt-2 border border-secondary" style="width: 150px;">Sign&nbsp;In</button>
                    </div>
                </form>
                <hr style="border-color: gray;" />
                <div class="mt-3">

                    <button class="btn btn-primary text-light text-center mt-2 border border-secondary mx-1" style="width: 150px;">Create&nbsp;Account</button>
                    <button class="btn btn-primary text-light text-center mt-2 border border-secondary mx-1" style="width: 150px;">Account&nbsp;Recovery</button>
                </div>
            </div>
        </div>
    </div>


