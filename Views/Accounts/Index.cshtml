@model Accounts
@{
    ViewBag.Title = "Authentication";
}
    <div class="container my-5" style="max-width: 700px;">
        <form asp-controller="Accounts" asp-action="Index" method="post" class="mt-3">
            <h2 class="text-center mb-2">Authentication</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Username" class="form-control"  placeholder="Enter a Valid Username or Email" />
                    <a class="form-text text-muted text-right text-light" onclick="location.href='@Url.Action("UsernameRecovery", "Accounts")'">Forgot&nbsp;Username?</a>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" type="password" />
                    <a class="form-text text-muted text-right text-light" onclick="location.href='@Url.Action("PasswordRecovery", "Accounts")'">Forgot&nbsp;Password?</a>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row text-center">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <button type="submit" class="btn btn-primary mt-2 mx-2" style="width: 175px;">Sign&nbsp;In</button>
                </div>
            </div>
        </form>
        <hr style="border-color: gray;" />
        <!-- Authentication Navigation -->
        <div class="mt-3 text-center">
            <button class="btn btn-primary text-light text-center mt-2 border mx-2" style="width: 175px;" onclick="location.href='@Url.Action("Create", "Accounts")'">Create&nbsp;An&nbsp;Account</button>
            <button class="btn btn-primary text-light text-center mt-2 border mx-2" style="width: 175px;" onclick="location.href='@Url.Action("Recovery", "Accounts")'">Recover&nbsp;An&nbsp;Account</button>
        </div>
    </div>

