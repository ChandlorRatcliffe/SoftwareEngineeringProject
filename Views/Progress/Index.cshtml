@model ProgressViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

<div>
    <h2>The Is the Progress View</h2>
</div>

<!-- This is the progress bar, portions : "style="width: 60%;" aria-valuenow="60"" will need to be generated to be in line with users progress-->
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-5">
            <div class="progress" style="height: 40px;">
                <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">40%</div>
            </div>
        </div>
    </div>
</div>


<div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">Completed</div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">Remaining</div>
    <div class="progress-bar bg-info" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">?</div>
</div>


<div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">40%</div>
</div>